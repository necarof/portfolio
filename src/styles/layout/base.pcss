* {
	box-sizing: border-box;
}

html,
body {
  margin: 0;
  padding: 0;
  color: #fff;
}

body {
  font-family: 'Open Sans', sans-serif;
  font-weight: 400;
  font-size: 16px;
}

h1, 
h2, 
h3, 
h4, 
h5, 
h6 {
	font-weight: normal;
	margin: 0;
	padding: 0;
}

a {
	text-decoration: none;
	color: #fff;
}

li,
ul,
p {
	list-style: none;
	margin: 0;
	padding: 0;
}

img {
  max-width: 100%;
  height: auto;
}

textarea {
  resize: none;
}